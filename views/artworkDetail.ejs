  <body>
    <div class="container">
      <nav></nav>
      <div class="container">
      <nav></nav>

      <main class="row">
        <div id="connect1" class="container-fluid padding">
      <div class="row connect text-center">
        <div class="col-12">
          <br />
         <br />
           <%- include("./nav.ejs") %>
           <br />
        </div>
      </div>
    </div>

      <main class="row">
       <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto">
        <h1>Update Artwork</h1>
          <form action="/Arts/update" method="POST">
            <div>
              <input
                  name="artworkID"
                  type="hidden"
                  class="form-control"
                  value="<%= a.artworkID %>"
              />
            </div>
            <div>
              <label class="form-label"
                >Name:
                <input
                  required="true"
                  name="name"
                  type="text"
                  class="form-control"
              /></label>
            </div>
            
            <div>
              <label class="form-label"
                >Year:
                <input
                  required="true"
                  name="year"
                  type="number"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Movement:
                <input
                  required="true"
                  name="movementName"
                  type="text"
                  class="form-control"
              /></label>
            </div>
            <div>
              <label class="form-label"
                >Status:
                <input
                  required="true"
                  name="status"
                  type="text"
                  class="form-control"
              /></label>
            </div>
            <button type="submit" class="btn btn-success">Update</button>
          </form>
        </div>
      </main>

      <footer>
        <div id="connect1" class="container-fluid padding">
      <div class="row connect text-center">
        <div class="col-12">
          <br />
          
